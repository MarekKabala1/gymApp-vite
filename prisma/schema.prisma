generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model User {
  id         String      @id @default(uuid())
  name       String
  email      String      @unique
  gender     String
  age        Int
  weight     Float
  height     Float
  routines   Routine[]
  nutritions Nutrition[]
}

model Routine {
  id         String     @id @default(uuid())
  userId     String
  musclePart String
  date       DateTime   @default(now())
  user       User       @relation(fields: [userId], references: [id])
  exercises  Exercise[]

  @@index([userId])
}

model Exercise {
  id        String  @id @default(uuid())
  routineId String
  name      String
  routine   Routine @relation(fields: [routineId], references: [id])
  sets      Set[]

  @@index([routineId])
}

model Set {
  id         String   @id @default(uuid())
  exerciseId String
  weight     Float
  reps       Int
  exercise   Exercise @relation(fields: [exerciseId], references: [id])

  @@index([exerciseId])
}

model Nutrition {
  id     String   @id @default(uuid())
  userId String
  date   DateTime @default(now())
  values Json
  user   User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
